# enable color support of ls and also add handy aliases
if [[ -x /usr/bin/dircolors ]]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias grep='grep --color=auto'
fi

# some more ls aliases
alias ll='ls -lh'
alias la='ls -Alh'
alias lh='ls -ld .??*'

# mad typo fix
alias exity='exit'

# info with imagemagick
alias imginfo="identify -format '-- %f -- \nType: %m\nSize: %b bytes\nResolution: %wpx x %hpx\nColors: %k'"
alias imgres="identify -format '%f: %wpx x %hpx'"

# tmux
alias ta="tmux attach"
alias tad="tmux attach -d"

# generate a UUID
alias uuid="python -c 'import uuid; print uuid.uuid4()'"

# update pip & distrbute
alias pipup="pip install pip==1.4.1 && pip install -U setuptools"

# view SSL cert info
alias x509info="openssl x509 -noout -text -in"

# load external aliases
if [[ -d $HOME/.zsh_aliases.d ]]; then
	find $HOME/.zsh_aliases.d -type f -exec source {} +;
fi

alias rethinkdb.start='launchctl load /usr/local/opt/rethinkdb/homebrew.mxcl.rethinkdb.plist'
alias rethinkdb.stop='launchctl unload /usr/local/opt/rethinkdb/homebrew.mxcl.rethinkdb.plist'

alias showopts='setopt kshoptionprint && setopt'

# vim open multiple files in tabs
alias vim='vim -p'

# alias rsync archival
alias ra='rsync -avP'
