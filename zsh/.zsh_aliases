# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias grep='grep --color=auto'
fi

# some more ls aliases
alias ll='ls -lh'
alias la='ls -Alh'
alias lh='ls -ld .??*'

# mad typo fix
alias exity='exit'

# info with imagemagick
alias imginfo="identify -format '-- %f -- \nType: %m\nSize: %b bytes\nResolution: %wpx x %hpx\nColors: %k'"
alias imgres="identify -format '%f: %wpx x %hpx'"

# tmux
alias ta="tmux attach"

# generate a UUID
alias uuid="python -c 'import uuid; print uuid.uuid4()'"

# update pip & distrbute
alias pipup="pip install -U pip && pip install -U distribute"

# start xbmc on the HTPC
alias xbmc='ssh kerplunk "/etc/init.d/xbmc start"'
