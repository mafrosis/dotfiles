[Unit]
Description=SABnzbd
After=docker.service
Requires=docker.service

[Service]
ExecStart=/usr/local/bin/systemd-docker run --rm --name %n -v /home/{{ sabnzbd_user }}:/config -v {{ download_dir }}:/{{ download_dir }} -v {{ complete_dir }}:/{{ complete_dir }} -e PGID={{ gid }} -e PUID={{ uid }} -e TZ=Europe/London -p 7654:8080 linuxserver/sabnzbd
Restart=always
RestartSec=10s
Type=notify
NotifyAccess=all
TimeoutStartSec=120
TimeoutStopSec=15

[Install]
WantedBy=multi-user.target
