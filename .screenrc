# Config for GNU screen

# skip the startup message
startup_message off

# go to home dir
chdir

# start with visual bell as default
vbell on
vbell_msg "bell on %t (%n)"

# Automatically detach on hangup (maintains state)
autodetach on


# Status line for the bottom of the screen
hardstatus on
hardstatus alwayslastline
hardstatus string "%{.rW}%-w%{.cW}%n %t%{-}%+w %=%{..G}%H%{..Y} %d/%M %C%a "

activity "Activity in %t(%n)"

# Lock the screen if idle for more than 20 minutes
#idle 1200 lockscreen



